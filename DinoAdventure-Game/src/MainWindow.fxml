<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import java.lang.String?>

<VBox fx:controller="MainWindow" fx:id="window" xmlns:fx="http://javafx.com/fxml"  stylesheets="@MainWindow.css" spacing="0">

    <!--
        * Please do not modify the root VBox without discussing it with the team first.
        * The root VBox controls the entire GUI, so any changes to it could affect everyone.
        * All pages except the initial page should have the following properties:
        *     - managed="false"
        *     - visible="false"
        * These are the properties used to show and hide pages.
        * Both properties must be set to the same value, so I've set up data binding to ensure that.
        * Use `<fx:id>.setVisible(boolean)` to show and hide pages within the Java, just make sure only one is shown at a time.
    -->

    <VBox fx:id="titlePage" styleClass="titlePage" managed="${titlePage.visible}" visible="true" alignment="CENTER" prefHeight="800">
        <Label text="DINO ADVENTURE" fx:id="title"  prefHeight="150">
        <style>
            -fx-font-size: 80px;
        </style>
        </Label>

        <Label prefHeight="300" style="-fx-graphic: url('assets/images/TitleScreen/gameImage.jpg')" />

        <Label text="MAIN MENU" fx:id="mainMenu" prefHeight="100" style="-fx-font-size: 30px; -fx-text-fill: DARKBLUE"/>
        <HBox spacing="20" alignment="CENTER" >
            <Button text="ABOUT" onAction="#onAboutClicked" style="-fx-font-size: 20px; -fx-background-color: DARKBLUE; -fx-text-fill: WHITE" />
            <Button text="HELP" onAction="#onHelpClicked" style="-fx-font-size: 20px; -fx-background-color: DARKBLUE; -fx-text-fill: WHITE"/>
            <Button text="LOAD" onAction="#onLoadClicked" style="-fx-font-size: 20px; -fx-background-color: DARKBLUE; -fx-text-fill: WHITE" />
            <Button text="HIGHSCORE" onAction="#onHighScoreClicked" style="-fx-background-color: DARKBLUE; -fx-font-size: 20px; -fx-text-fill: WHITE" />
            <Button text="PLAY" onAction="#play" style="-fx-background-color: DARKBLUE; -fx-font-size: 20px; -fx-text-fill: WHITE" /> 
        </HBox>

        <HBox spacing="20" alignment="CENTER" prefHeight="100">
            <Label text = "Enter your name:" style="-fx-font-size: 20px; -fx-text-fill: DARKBLUE" prefHeight = "20" prefWidth = "150" />
            <TextField fx:id="name" text = "" />
            <Label text = "Difficulty Level:" style="-fx-font-size: 20px; -fx-text-fill: DARKBLUE" prefHeight = "20" />
            <ChoiceBox fx:id="difficultyLevels">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                    <String fx:value="EASY" />
                    <String fx:value="MEDIUM" />
                    <String fx:value="HARD" />
                    <String fx:value="CUSTOM" />
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="EASY" />
                </value>
            </ChoiceBox>
        </HBox>

    </VBox>

    <VBox fx:id="highScorePage" styleClass="highScorePage" managed="${highScorePage.visible}" visible="false">

        <!-- TODO: Build high score page here -->

    </VBox>

    <VBox fx:id="helpPage" styleClass="helpPage" managed="${helpPage.visible}" visible="false">

        <!-- TODO: Build help page here -->

    </VBox>

    <VBox fx:id="aboutPage" styleClass="aboutPage" managed="${aboutPage.visible}" visible="false">

        <!-- TODO: Build about page here -->

    </VBox>

    <AnchorPane fx:id="gamePage" styleClass="gamePage" managed="${gamePage.visible}" visible="false" prefWidth="${window.width}" prefHeight="${window.height}" />

</VBox>
