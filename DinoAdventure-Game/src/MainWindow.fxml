<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import java.lang.String?>

<VBox fx:controller="MainWindow" fx:id="window" xmlns:fx="http://javafx.com/fxml"  stylesheets="@MainWindow.css" spacing="0">

    <!--
        * Please do not modify the root VBox without discussing it with the team first.
        * The root VBox controls the entire GUI, so any changes to it could affect everyone.
        * All pages except the initial page should have the following properties:
        *     - managed="false"
        *     - visible="false"
        * These are the properties used to show and hide pages.
        * Both properties must be set to the same value, so I've set up data binding to ensure that.
        * Use `<fx:id>.setVisible(boolean)` to show and hide pages within the Java, just make sure only one is shown at a time.
    -->

    <VBox fx:id="titlePage" styleClass="titlePage" managed="${titlePage.visible}" visible="true" alignment="CENTER" prefHeight="${window.height}">
        <Label text="DINO ADVENTURE" fx:id="title"  prefHeight="150">
        <style>
            -fx-font-size: 80px;
        </style>
        </Label>

        <Label prefHeight="300" style="-fx-graphic: url('assets/images/TitleScreen/gameImage.jpg')" />

        <Label text="MAIN MENU" fx:id="mainMenu" prefHeight="100" style="-fx-font-size: 30px; -fx-text-fill: DARKBLUE"/>
        <HBox spacing="20" alignment="CENTER" >
            <Button text="ABOUT" onAction="#onAboutClicked" styleClass="titlePageButton"/>
            <Button text="HELP" onAction="#onHelpClicked" styleClass="titlePageButton"/>
            <Button text="LOAD" onAction="#onLoadClicked" styleClass="titlePageButton"/>
            <Button text="HIGHSCORES" onAction="#onHighScoreClicked" styleClass="titlePageButton"/>
            <Button text="PLAY" onAction="#play" styleClass="titlePageButton"/> 
        </HBox>

        <HBox spacing="20" alignment="CENTER" prefHeight="100">
            <Label text = "Enter your name:" style="-fx-font-size: 20px; -fx-text-fill: DARKBLUE" prefHeight = "20" prefWidth = "250" alignment="CENTER_RIGHT"/>
            <TextField fx:id="name" text = "Joe" />
            <Label text = "Difficulty Level:" style="-fx-font-size: 20px; -fx-text-fill: DARKBLUE" prefHeight = "20" />
            <ChoiceBox fx:id="difficultyLevels">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                    <String fx:value="EASY" />
                    <String fx:value="MEDIUM" />
                    <String fx:value="HARD" />
                    <String fx:value="CHEAT" />
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="EASY" />
                </value>
            </ChoiceBox>
            
            <Label text = "Game Mode:" style="-fx-font-size: 20px; -fx-text-fill: DARKBLUE" prefHeight = "20" />
            <ChoiceBox fx:id="gameMode" onAction="#onCustomClicked">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                    <String fx:value="NORMAL" />
                    <String fx:value="CUSTOM" />
                    <String fx:value="SCHAUB MODE" />
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="NORMAL" />
                </value>
            </ChoiceBox>

            <Label text = "Level:" style="-fx-font-size: 20px; -fx-text-fill: DARKBLUE" prefHeight = "20" />
            <ChoiceBox fx:id="levelsChoice">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                    
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="Demo" />
                </value>
            </ChoiceBox>
        </HBox>

    </VBox>

    <VBox fx:id="highScoresPage" styleClass="highScoresPage" managed="${highScoresPage.visible}" visible="false" prefHeight="${window.height}" alignment="CENTER" spacing="30">
        <HBox alignment="CENTER">
        <Label text="High Scores" style="-fx-font-size: 50px; -fx-text-fill: WHITE" alignment="CENTER"/>
        </HBox>

        <HBox style="-fx-font-size: 30px;" spacing="30" alignment="CENTER">
            <Label text="Rank" style="-fx-text-fill: WHITE"/>
            <Label text="Name" style="-fx-text-fill: WHITE"/>
            <Label text="Score" style="-fx-text-fill: WHITE"/>
            <Label text="Difficulty" style="-fx-text-fill: WHITE"/>
        </HBox>
        <HBox style="-fx-font-size: 20px;" spacing="30" alignment="CENTER"> 
            <VBox fx:id="ranks" > </VBox>
            <VBox fx:id="names" ></VBox>
            <VBox fx:id="scores" ></VBox>
            <VBox fx:id="levels" ></VBox>
        </HBox>

        <Button text="MAIN MENU" onAction="#onMainMenuClicked" styleClass="highscorePageButton"/>

    </VBox>

    <VBox fx:id="newHighscorePage" styleClass="newHighscorePage" managed="${newHighscorePage.visible}" visible="false" prefHeight="${window.height}" alignment="CENTER" spacing="30">
        <HBox alignment="CENTER" style="-fx-font-size: 80px">
            <Label text="New High Score!" alignment="CENTER"  style="-fx-text-fill: DARKBLUE;"/>
        </HBox>

        <HBox alignment="CENTER" style="-fx-font-size: 30px; fx-spacing:2px; -fx-text-fill: DARKBLUE;">
            <Label text="Congratulations " wrapText="true" style="-fx-text-fill: DARKBLUE;"/> 
            <Label fx:id="playerName" style="-fx-text-fill: DARKBLUE;"/>
            <Label text="! you made a new High score!!" wrapText="true" style="-fx-text-fill: DARKBLUE;"/>
        </HBox>

        <HBox alignment="CENTER">
        </HBox>

        <HBox alignment="CENTER" style="-fx-font-size: 30px;-fx-spacing:2px; -fx-text-fill: DARKBLUE;">
            <Label text="Your HighScore: " style="-fx-text-fill: DARKBLUE;"/>
            <Label fx:id="newScore" style="-fx-text-fill: DARKBLUE;"/>
        </HBox>

        <Button text="MAIN MENU" onAction="#onMainMenuClicked" styleClass="titlePageButton"/>
    </VBox>

    <VBox fx:id="helpPage" styleClass="helpPage" managed="${helpPage.visible}" visible="false" prefHeight="${window.height}" alignment="CENTER" spacing="30">
        <HBox alignment="CENTER" style="-fx-font-size: 50px;-fx-border-color:#DAA520;-fx-border-width:2px;-fx-border-height:2px;-fx-font: 28px Vivaldi;" >
            <Label fx:id="instructions" text="INSTRUCTIONS" alignment="CENTER"/>
        </HBox>

        <HBox alignment="CENTER" style="-fx-font-size:30px;">
            <Label text="Follow these to finish DINO ADVENTURE." style="-fx-text-fill: WHITE"/>
        </HBox>

        <VBox alignment="CENTER" style="-fx-font-size:20px; -fx-padding:40px;" spacing="15">
            <Label text="You are DINO and must proceed platform by platform to reach the end of your adventure. Use the left arrow to go left, the right arrow to go forward, and the up arrow to jump." wrapText="true" style="-fx-text-fill: WHITE"/>
            <Label text="Kill the enemies by jumping and landing on their head. Every time you kill an enemy, you can collect a coin worth 25 points. Hitting an enemy anywhere other than the head makes you lose 1 health point." wrapText="true" style="-fx-text-fill: WHITE"/>
            <Label text="Falling in the gap between platforms makes you lose 10 points. The feather powerup enables you to jump higher for 10 seconds. The lightning powerup increases your speed, and the first-aid powerup increases your health by 10 points" wrapText="true" style="-fx-text-fill: WHITE"/>
            <Label text="Each level ends at the finish line. The game ends when you run out of health or complete the levels in the sequence you have chosen." wrapText="true" style="-fx-text-fill: WHITE"/>
            <Label text="HAVE A GREAT GAME!" wrapText="true" style="-fx-text-fill: WHITE"/>
        </VBox>

        <Button text="MAIN MENU" onAction="#onMainMenuClicked" styleClass="highscorePageButton"/>
    </VBox>

    <VBox fx:id="aboutPage" styleClass="aboutPage" managed="${aboutPage.visible}" visible="false" prefHeight="${window.height}" alignment="CENTER" spacing="30">
        <Label fx:id="aboutTitle" text="ABOUT DINO ADVENTURE" />
        <Label text="Version 1.0" style="-fx-font-size: 30px; -fx-text-fill: DARKBLUE;"/>
        <Label text="DINO ADVENTURE is created by Team 3 of CPS 209." style="-fx-font-size: 20px; -fx-text-fill: DARKBLUE;"/>
        <VBox spacing = "20" alignment="CENTER">
            <Label text="Developers:" style="-fx-font-size: 25px; -fx-text-fill: DARKBLUE;"/>
            <Label text="Luke Darling" style="-fx-font-size: 20px; -fx-text-fill: DARKBLUE;"/>
            <Label text="Rebecca Henderson" style="-fx-font-size: 20px; -fx-text-fill: DARKBLUE;"/>
            <Label text="Christopher Zuehlke" style="-fx-font-size: 20px; -fx-text-fill: DARKBLUE;"/>
            <Label text="Reshi Pasupuleti" style="-fx-font-size: 20px; -fx-text-fill: DARKBLUE;"/>
        </VBox>
        <Button text="MAIN MENU" onAction="#onMainMenuClicked" styleClass="titlePageButton"/>

    </VBox>

    <AnchorPane fx:id="gamePage" styleClass="gamePage" managed="${gamePage.visible}" visible="false" prefWidth="${window.width}" prefHeight="${window.height}" />

</VBox>
